@model TaskItem

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 cadastrar-card">
            <form asp-controller="Desejos" asp-action="Create">
                <fieldset>
                    <h2 class="text-center mt-3">Adicionar à Lista de Desejos</h2>

                    <input asp-for="Id" type="hidden" />

                    <div class="form-group">
                        <label class="col-form-label mt-4" for="inputTitulo">Título</label>
                        <input asp-for="Titulo" type="text" class="form-control" placeholder="Nome do Jogo" id="inputTitulo">
                    </div>

                    <div class="form-group">
                        <label for="inputDescricao" class="form-label mt-4">Descrição</label>
                        <textarea asp-for="Descricao" class="form-control" id="inputDescricao" rows="3"></textarea>
                    </div>
                    <div class="form-group mt-3">
                        <label for="Valor">Valor atual do jogo</label>
                        <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" placeholder="00.00" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <label for="customRange3" class="form-label mt-4">Nota do Jogo - Reviews </label>
                    <div class=" d-flex justify-content-between">
                        @for (int i = 0; i <= 10; i++)
                        {
                            <span> @i </span>
                        }
                    </div>
                    <input asp-for="Pontuacao" type="range" class="form-range" min="0" max="10" step="0.0" id="customRange3">
                    <div class="d-flex justify-content-between mt-3">

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-action="Index" asp-controller="Desejos" class="btn btn-dark">Cancelar</a>
                        <input type="submit" class="btn btn-danger" value="Salvar" />
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
</div>


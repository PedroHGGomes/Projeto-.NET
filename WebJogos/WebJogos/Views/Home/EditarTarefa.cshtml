@model TaskItem

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form asp-controller="Home" asp-action="Editar">
                <fieldset>
                    <legend class="text-center mt-3">Cadastrar tarefa</legend>
                    <div class="form-group">
                        <label class="col-form-label mt-4" for="inputDefault">Título</label>
                        <input asp-for="Titulo" type="text" class="form-control" placeholder="Nome do Jogo" id="inputDefault">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea" class="form-label mt-4">Descrição</label>
                        <textarea asp-for="Descricao" class="form-control" id="exampleTextarea" rows="3"></textarea>
                    </div>
                    <label for="customRange3" class="form-label">Pontuação</label>
                    <input asp-for="Pontuacao" type="range" class="form-range" min="1" max="100" step="0.0" id="customRange3">
                    <div class="d-flex justify-content-between mt-3">
                        <input type="submit" asp-controller="Home" asp-action="Index" class="btn btn-outline-light" value="Cancelar" />
                        <input type="submit" class="btn btn-danger" value="Salvar" />
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
